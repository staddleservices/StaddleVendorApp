<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <android.support.v7.widget.CardView
        android:id="@+id/dialogboxorderplaced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/cnameheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialogboxcardviewtag"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tag1"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mainthinfont"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:text="Add new promocode"
                        android:textSize="15dp"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tag1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp">

                        <EditText
                            android:id="@+id/promo_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:textAllCaps="true"
                            android:hint="Promoode name"
                            android:textSize="13dp"
                            android:inputType="textCapSentences"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:background="@drawable/mobileotpedittext"/>

                        <EditText
                            android:id="@+id/promo_value"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:hint="Promoode value %"
                            android:textSize="13dp"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/promo_name"
                            android:background="@drawable/mobileotpedittext"/>

                        <EditText
                            android:id="@+id/mprice"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:hint="Applicable amount"
                            android:textSize="13dp"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/promo_value"
                            android:background="@drawable/mobileotpedittext"/>

                        <EditText
                            android:id="@+id/promo_description"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:hint="Description "
                            android:textSize="13dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/mprice"
                            android:background="@drawable/mobileotpedittext"/>



                        <EditText
                            android:id="@+id/vendor_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:hint="Vender Password "
                            android:textSize="13dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/promo_description"
                            android:background="@drawable/mobileotpedittext"/>

                        <EditText
                            android:id="@+id/max_uses"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:hint="Max uses on orders"
                            android:textSize="13dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:maxLines="1"
                            android:inputType="number"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/vendor_password"
                            android:background="@drawable/mobileotpedittext"/>


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cnameheading"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp">



                    <Button
                        android:id="@+id/add_promo_btn"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pinview"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/loginscreenmobile"
                        android:fontFamily="@font/mainboldfont"
                        android:text="Add +"
                        android:textSize="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:id="@+id/promo_cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mainthinfont"
                        android:textColor="@android:color/holo_red_light"
                        android:text="Cancel"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/add_promo_btn"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>