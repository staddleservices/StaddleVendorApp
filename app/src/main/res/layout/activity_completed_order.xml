<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AcceptedListActivity">


    <RelativeLayout
        android:id="@+id/rel_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_color_2"
        android:padding="@dimen/padding_10">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/backarrowbtnwhite"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/order_id_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/mainboldfont"
            android:layout_toEndOf="@+id/iv_back"
            android:text="#OR9791"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/personal_details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_below="@+id/rel_actionbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mainboldfont"
                        android:text="Order from "
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginStart="25dp"/>
                    <TextView
                        android:id="@+id/name_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mainboldfont"
                        android:text="Isha Srivastva "
                        android:textSize="15dp"
                        android:textColor="@color/app_color_2"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text="2:30 PM"
                    android:fontFamily="@font/mainthinfont"
                    android:textSize="10dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/contact_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="Contact : 9087654321 | abc@xyz.com"
                    android:layout_marginEnd="25dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_marginStart="25dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/date_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="Date for Booking : 26 Jan 2020"
                    android:layout_marginEnd="5dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_marginStart="25dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="Timing : 8:30 AM - 9.30 AM"

                    android:layout_marginEnd="5dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_marginStart="25dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/booking_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mainthinfont"
                    android:text="Address : "

                    android:layout_marginEnd="5dp"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:layout_marginStart="25dp"/>

            </RelativeLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/personal_details_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/mainthinfont"
                android:text="Booking for following items / services"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvShopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_marginTop="5dp"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Order Price"
                            android:fontFamily="@font/mainthinfont"
                            android:textColor="#000000"
                            android:layout_marginStart="25dp"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_item_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="0.7"
                            android:text="Rs."
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txt_percentagename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Discount"
                            android:layout_marginStart="25dp"
                            android:textColor="#43c73e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/mainthinfont"
                            android:gravity="end"
                            android:text="₹ "
                            android:textColor="#43c73e"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/promocode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/promoname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="STADDLE20"
                            android:layout_marginStart="25dp"
                            android:textColor="#43c73e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/promo_cutoff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/mainthinfont"
                            android:gravity="end"
                            android:text="- ₹ "
                            android:textColor="#43c73e"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:text="Total Price:"
                            android:layout_marginStart="25dp"
                            android:fontFamily="@font/mainboldfont"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txt_overallTotalprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="@dimen/margin_15"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text=""
                            android:fontFamily="@font/mainboldfont"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/rel_actionbar"
        android:background="@drawable/toolbardropshadow"/>


</RelativeLayout>