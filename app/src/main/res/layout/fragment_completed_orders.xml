<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/comleted_order_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mainboldfont"
        android:text="Completed Orders"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_completed_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@+id/comleted_order_show"
        android:layout_margin="@dimen/margin_5"
        />


    <RelativeLayout
        android:id="@+id/rl_no_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_actionbar"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/noordersicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/no_orders_yet"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_nodetails"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noordersicon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mainthinfont"
            android:text="No orders"
            android:textColor="#000000" />

    </RelativeLayout>
</RelativeLayout>