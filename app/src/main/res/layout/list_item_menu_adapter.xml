<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_5"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="@dimen/margin_5"
    android:background="@drawable/shape_order_out_line"
    android:padding="10dp"
    android:visibility="visible">


    <TextView
        android:id="@+id/txt__category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <RelativeLayout
        android:id="@+id/relData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt__category_name"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_switch_old"
            android:padding="3dp"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/btn_switch_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_toStartOf="@+id/imgEdit"
            android:checked="true"
            android:theme="@style/SCBSwitch" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imdDelete"
            android:padding="5dp"
            android:src="@drawable/ic_edit"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imdDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_action_delete"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relData"
        android:padding="3dp"
        android:text="â‚¹ 500"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>

