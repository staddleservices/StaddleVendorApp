<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_dialog_delete_post"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_delete_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_3"
        android:padding="10dp"
        android:text="Account Not Active"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_delete_confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_change_pass"
        android:padding="10dp"
        android:text="Your is account block by admin active from your email link !!"
        android:textColor="#999999"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btn_ok1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
